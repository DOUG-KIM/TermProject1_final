<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".address">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:weightSum="1"
        android:id="@+id/linearLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시/도"
            android:id="@+id/textView"
            android:layout_weight="0.33"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="시/군/구"
            android:id="@+id/textView2"
            android:layout_weight="0.33"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="동/읍/면"
            android:id="@+id/textView3"
            android:layout_weight="0.34"
            android:textSize="20dp" />
    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gridLayout2"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="110dp"
            android:layout_height="58dp"
            android:id="@+id/button_request"
            android:layout_row="0"
            android:layout_column="0"
            android:background="@drawable/address_1" />

        <Button
            android:layout_width="110dp"
            android:layout_height="58dp"
            android:id="@+id/button2"
            android:layout_row="0"
            android:layout_column="1"
            android:background="@drawable/address_200" />

        <Button
            android:layout_width="110dp"
            android:layout_height="58dp"
            android:id="@+id/button3"
            android:layout_row="0"
            android:layout_column="2"
            android:background="@drawable/address_3"/>

        <Button
            android:layout_width="110dp"
            android:layout_height="58dp"
            android:id="@+id/button4"
            android:layout_row="1"
            android:layout_column="0"
            android:background="@drawable/address_4"/>

        <Button
            android:layout_width="110dp"
            android:layout_height="58dp"
            android:id="@+id/button5"
            android:layout_row="1"
            android:layout_column="1"
            android:background="@drawable/address_5"/>

        <Button
            android:layout_width="110dp"
            android:layout_height="58dp"
            android:id="@+id/button6"
            android:layout_row="1"
            android:layout_column="2"
            android:background="@drawable/address_6"/>

        <Button
            android:layout_width="110dp"
            android:layout_height="58dp"
            android:id="@+id/button7"
            android:layout_row="2"
            android:layout_column="0"
            android:background="@drawable/address_7"/>

        <Button
            android:layout_width="110dp"
            android:layout_height="58dp"
            android:id="@+id/button8"
            android:layout_row="2"
            android:layout_column="1"
            android:background="@drawable/address_8"/>

        <Button
            android:layout_width="110dp"
            android:layout_height="58dp"
            android:id="@+id/button9"
            android:layout_row="2"
            android:layout_column="2"
            android:background="@drawable/address_9"/>

        <Button
            android:layout_width="110dp"
            android:layout_height="58dp"
            android:id="@+id/button10"
            android:layout_row="3"
            android:layout_column="0"
            android:background="@drawable/address_10"/>

        <Button
            android:layout_width="110dp"
            android:layout_height="58dp"
            android:id="@+id/button11"
            android:layout_row="3"
            android:layout_column="1"
            android:background="@drawable/address_11"/>

        <Button
            android:layout_width="110dp"
            android:layout_height="58dp"
            android:id="@+id/button12"
            android:layout_row="3"
            android:layout_column="2"
            android:background="@drawable/address_12"/>

        <Button
            android:layout_width="110dp"
            android:layout_height="58dp"
            android:id="@+id/button13"
            android:layout_row="4"
            android:layout_column="0"
            android:background="@drawable/address_13"/>

        <Button
            android:layout_width="110dp"
            android:layout_height="58dp"
            android:id="@+id/button14"
            android:layout_row="4"
            android:layout_column="1"
            android:background="@drawable/address_14"/>

        <Button
            android:layout_width="110dp"
            android:layout_height="58dp"
            android:id="@+id/button15"
            android:layout_row="4"
            android:layout_column="2"
            android:background="@drawable/address_15"/>

    </GridLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gridLayout2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="58dp">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="닫기"
            android:id="@+id/button31"
            android:layout_weight="1" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="확인"
            android:id="@+id/button32"
            android:layout_weight="1" />
    </LinearLayout>

</RelativeLayout>
